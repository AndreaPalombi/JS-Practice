  <script>
    // Your JavaScript goes here!
    console.log("Hello, World!")
	
	//this function takes one number and returns that number + 7

	let add7 = function(n){
		console.log(n+7);
		};
		
	//this function takes 2 numbers and returns their product.

	let multiply = function(a,b){
		console.log(a*b);
		};
		
	//this function takes a string and returns that string with only the first letter capitalized. 
	//It can take strings that are lowercase, UPPERCASE or BoTh.

	let capitalize = function(string) {
	 
		let capitalLetter =	string.slice(0,1);
		let newString = string.substr(1);
		
		console.log(capitalLetter.toUpperCase() + newString.toLowerCase());
	};
	
	
	//this function takes a string and returns the very last letter of that string:

	let lastLetter = function(string){
		let length = string.length;
		let slice = string.slice(length-1);
		console.log(slice);
	};
	
	
	//FizzBuzz function

	function FizzBuzz(input){
    for(let i=1; i<=input; i++){
        
        if(i%3===0 && i%5===0){
            console.log("FizzBuzz");
        }
        else if(i%3===0){
            console.log("Fizz");
        }
        
        else if(i%5===0){
            console.log("Buzz");
        }
        else {
            console.log(i);
        }
    };
}
	
		add7(4);
		multiply(3,2);
		capitalize("iLoveFooTBALL");
		lastLetter("abcde");
		FizzBuzz(320);
	
	
	
  </script>
